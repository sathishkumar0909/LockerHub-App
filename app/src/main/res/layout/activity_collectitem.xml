<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#0A001E"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".collectitem">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/ic_baseline_done_outline_24"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Thank you for using our service"
    android:layout_marginVertical="20dp"
    android:textColor="@color/white"
    android:fontFamily="@font/poppins_medium"
    android:textSize="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/todasboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#FFC6DD"
        android:textAlignment="center"
        android:background="#FFC6DD">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="Continue to Dashboard"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>